<%= f.label :start_date, "Departure Date", :class => "form-label" %>
<%= f.date_field :start_date, :placeholder => "yyyy-mm-dd", :class => "form-field" %>

<%= f.label :end_date, "Return Date (opt)", :class => "form-label" %>
<%= f.date_field :end_date, :placeholder => "yyyy-mm-dd", :class => "form-field" %>

<%= f.fields_for(:destination, destination) do |d| %>
  <%= d.label :name, "Destination Name", :class => "form-label" %>
  <%= d.text_field :name, :class => "form-field" %>
<% end %>

<%= f.label :purpose, "Purpose of Travel (opt)", :class => "form-label" %>
<%= f.text_field :purpose, :class => "form-field" %>
