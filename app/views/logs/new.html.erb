<div class="form-container-large">

  <div class="form-header-container-large">
    <h1>New Travel Log</h1>
  </div>

  <% if @log.errors.any? %>
    <%= render :partial => "shared/form_errors", :locals => {:obj => @log} %>
  <% end %>

  <div class="form-body-container-large">
    <%= form_for(@log, :url => travel_logs_path(@log.travel), :method => "post") do |f| %>
      <%= render :partial => "travel_log_form", :locals => {:f => f} %>
      <%= f.submit "Create new log", :class => "form-submit-btn" %>
    <% end %>
  </div>

</div>
